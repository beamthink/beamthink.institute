# --- Supabase Configuration ---
# Your Supabase Project URL (from Supabase Project Settings -> API)
NEXT_PUBLIC_SUPABASE_URL="https://YOUR_ACTUAL_SUPABASE_PROJECT_URL.supabase.co"
# Your Supabase Anon (public) Key (from Supabase Project Settings -> API)
NEXT_PUBLIC_SUPABASE_ANON_KEY="YOUR_ACTUAL_SUPABASE_ANON_KEY"
# Your Supabase Service Role Key (from Supabase Project Settings -> API). For server-side operations only.
SUPABASE_SERVICE_ROLE_KEY="YOUR_ACTUAL_SUPABASE_SERVICE_ROLE_KEY"

# --- Sanity Configuration ---
# Your Sanity Project ID (from sanity.io/manage, Project ID 4cjt0doa)
NEXT_PUBLIC_SANITY_PROJECT_ID="4cjt0doa"
# Your Sanity Dataset Name
NEXT_PUBLIC_SANITY_DATASET="production"
# Your Sanity API Version (from your template/previous logs)
NEXT_PUBLIC_SANITY_API_VERSION="2024-10-28"
# Your Sanity API Read Token (from sanity.io/manage, Viewer permissions)
SANITY_API_READ_TOKEN="sk_YOUR_ACTUAL_SANITY_READ_TOKEN"
# Your Sanity API Editor Token (from sanity.io/manage, Editor permissions). For server-side write operations.
SANITY_API_TOKEN="sk_YOUR_ACTUAL_SANITY_EDITOR_TOKEN"
# URL of your deployed Sanity Studio (for Presentation Tool preview)
SANITY_STUDIO_URL="https://beam-memorials-studio.sanity.studio"

# --- Real-time Notifications (SSE) ---
# URL for your SSE notification stream API route (local development)
NEXT_PUBLIC_SSE_NOTIFICATION_URL="http://localhost:3000/api/notifications/stream"

# --- OpenAI API (if you plan to use it) ---
OPENAI_API_KEY="sk-YOUR_ACTUAL_OPENAI_KEY_HERE"
